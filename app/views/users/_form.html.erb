<%= form_for(@user, :html => {"data-parsley-validate" => true}) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  
  <div class="field">
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </div>

  <div class="field">
    <input type="radio" name="user[is_admin]" value="true">As a admin
    <input type="radio" name="user[is_admin]" value="false">As a user
  </div>


  <div class="actions">
    <%= f.submit "Singup", :class => "btn-a" %>
  </div>
<% end %>